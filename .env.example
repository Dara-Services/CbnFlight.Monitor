# Variables de entorno para producción

# Modo de ejecución
NODE_ENV=production

# Puerto de la aplicación
PORT=3000

# ============================================
# OPCIÓN 1: Cloudflare (Híbrido)
# ============================================
# Descomentar si usas Cloudflare KV
# CLOUDFLARE_ACCOUNT_ID=tu_account_id_aqui
# CLOUDFLARE_API_TOKEN=tu_api_token_aqui
# CLOUDFLARE_KV_NAMESPACE_ID=tu_kv_namespace_id_aqui

# ============================================
# OPCIÓN 2: Redis (Auto-hospedado)
# ============================================
# Descomentar si usas Redis en lugar de Cloudflare KV
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=tu_password_opcional
# REDIS_DB=0

# ============================================
# Configuración de notificaciones (Apprise)
# ============================================
# URL del servidor Apprise (si usas uno)
# APPRISE_API_SERVER=https://apprise.example.com
# RECIPIENT_URL=discord://webhook_id/webhook_token

# ============================================
# Autenticación (opcional)
# ============================================
# Descomentar para proteger la página con contraseña
# STATUS_PAGE_PASSWORD=tu_password_seguro

# ============================================
# Configuración del worker
# ============================================
# Minutos de cooldown entre escrituras en KV/Redis
KV_WRITE_COOLDOWN_MINUTES=3

# ============================================
# Zona horaria para notificaciones
# ============================================
TIMEZONE=America/Mexico_City

# ============================================
# Configuración de logging
# ============================================
LOG_LEVEL=info

